@model WebAPPCoreMvcUI.Models.ProductViewModel.ProductAddViewModel


<div class="container">
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"> </label>                
                <input asp-for="ProductName" value="@ViewBag.ProductName" class="form-control" type="text" disabled/>
                <input asp-for="ProductId" value="@ViewBag.ProductId" type="hidden" class="form-control"/>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                    
                    <label asp-for="Files" class="control-label">Select Images</label>
                   
                    <div class="custom-file">
                        <input asp-for="Files"  class="custom-file-input" id="customFile"/>
                        <label class="custom-file-label" for="customFile"></label>
                    </div>
                    
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>           
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
   
</div>
</div>

